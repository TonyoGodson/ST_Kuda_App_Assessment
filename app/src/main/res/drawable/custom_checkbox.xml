<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <!-- Define the background color when checkbox is checked -->
            <solid android:color="@color/kuda_green" />

            <!-- Define the corner radius of the checkbox -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <!-- Define the background color when checkbox is unchecked -->
<!--            <solid android:color="@color/kuda_green" />-->
            <stroke android:width="1dp" android:color="@color/kuda_green" />
            <!-- Define the corner radius of the checkbox -->
            <corners android:radius="250dp" />
        </shape>
    </item>
</selector>